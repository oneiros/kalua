<%= form_for @remote_calendar do |f| %>

  <p>
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :url %> <br />
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :color %> <br />
    <%= f.text_field :color %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= color_picker_for :remote_calendar_color %>
